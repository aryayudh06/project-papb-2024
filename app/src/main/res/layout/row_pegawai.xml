<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivFotoPegawai"
        android:layout_width="125dp"
        android:layout_height="133dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNamaPegawai"
        android:layout_width="231dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Nama"
        app:layout_constraintEnd_toStartOf="@+id/ivFotoPegawai"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="231dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="Gender"
        app:layout_constraintEnd_toEndOf="@+id/tvNamaPegawai"
        app:layout_constraintStart_toStartOf="@+id/tvNamaPegawai"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaPegawai" />

    <TextView
        android:id="@+id/tvJabatan"
        android:layout_width="231dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="Jabatan"
        app:layout_constraintEnd_toEndOf="@+id/tvGender"
        app:layout_constraintStart_toStartOf="@+id/tvGender"
        app:layout_constraintTop_toBottomOf="@+id/tvGender" />

    <TextView
        android:id="@+id/tvKTP"
        android:layout_width="231dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="KTP"
        app:layout_constraintEnd_toEndOf="@+id/tvJabatan"
        app:layout_constraintStart_toStartOf="@+id/tvJabatan"
        app:layout_constraintTop_toBottomOf="@+id/tvJabatan" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Delete"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivFotoPegawai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFotoPegawai"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>