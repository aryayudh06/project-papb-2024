<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34a1eb"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvSimpegHome"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="SIMPEG"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDataKehadiran"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/white"
        android:text="Data Kehadiran"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSimpegHome" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDataPegawai" />

    <Button
        android:id="@+id/btDataPegawai"
        android:layout_width="125dp"
        android:layout_height="71dp"
        android:backgroundTint="@color/white"
        android:text="Data Pegawai"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btDataKehadiran"
        app:layout_constraintTop_toBottomOf="@+id/tvSimpegHome" />


</androidx.constraintlayout.widget.ConstraintLayout>