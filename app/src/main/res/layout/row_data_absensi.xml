<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvNamaAbsensi"
            android:layout_width="164dp"
            android:layout_height="17dp"
            android:layout_marginTop="8dp"
            android:text="Steven"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTanggalAbsensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="01/01/2001"
            app:layout_constraintStart_toStartOf="@+id/tvNamaAbsensi"
            app:layout_constraintTop_toBottomOf="@+id/tvNamaAbsensi" />

        <TextView
            android:id="@+id/tvJamAbsensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="07.30 WIB"
            app:layout_constraintStart_toStartOf="@+id/tvTanggalAbsensi"
            app:layout_constraintTop_toBottomOf="@+id/tvTanggalAbsensi" />

        <TextView
            android:id="@+id/tvLokasiAbsensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jl. Watu Gong No. 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvJamAbsensi"
            app:layout_constraintTop_toBottomOf="@+id/tvJamAbsensi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
